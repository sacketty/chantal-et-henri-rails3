<%- model_class = ListeMariage.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:article) %></th>
      <th><%= model_class.human_attribute_name(:taken) %></th>
      <th><%= model_class.human_attribute_name(:taken_by_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @liste_mariages.each do |liste_mariage| %>
      <tr>
        <td><%= link_to liste_mariage.id, liste_mariage_path(liste_mariage) %></td>
        <td><%= liste_mariage.article %></td>
        <td><%= liste_mariage.taken %></td>
        <td><%= liste_mariage.taken_by_id %></td>
        <td><%=l liste_mariage.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_liste_mariage_path(liste_mariage), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      liste_mariage_path(liste_mariage),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_liste_mariage_path,
            :class => 'btn btn-primary' %>
