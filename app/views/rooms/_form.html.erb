<%= form_for @room, :url=>room_path, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Réservé par:", :class => 'control-label' %>
    <div class="controls">
      <%= @room.user.name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Numéro Chateau", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rooms_path, :class => 'btn' %>
  </div>
<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Occupants</th>
    </tr>
  </thead>
  <tbody>
    <% @room.guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
