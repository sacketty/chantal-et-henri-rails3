<div class="span9 columns">
<%- model_class = Upload.new.class -%>

<%= paginate @uploads %>

<h2>Tous <%= @who.nil? ? "mes" : @who %> MP3s</h2><p></p>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:titre) %></th>
      <th><%= model_class.human_attribute_name(:artiste) %></th>
      <th>Cat√©gories</th>
    </tr>
  </thead>
  <tbody>
    <% @uploads.each do |ul| %>
      <tr>
        <td><%= link_to ul.id, upload_path(ul) %></td>
        <td><%= ul.titre %></td>
        <td><%= ul.artiste %></td>
        <td><%= (ul.categories.map {|c| c.name}).join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Ajouter des clips',
            new_upload_path,
            :class => 'btn btn-primary' %> 
</div>
