<%- model_class = @email.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong>Destinataire:</strong><br>
  <%= "#{@email.to.name} < #{@email.to.email}>" %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:subject) %>:</strong><br>
  <%= @email.subject %>
</p>
<p>
  <strong>cc:</strong><br>
  <%= @email.cc %>
</p>
<p>
  <strong>cci:</strong><br>
  <%= @email.cci %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:text) %>:</strong><br>
  <%= @email.text %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              emails_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_path(@email),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
