<div class="span12 columns">
<%- model_class = Group.new.class -%>
<h2><%= "Liste des groupes" %></h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% for group in Group.all %>
      <tr>
        <td><%= link_to group.id, admin_group_path(group) %></td>
        <td><%= link_to group.name, admin_group_path(group) %></td>
        <td><%= group.short_description %></td>
        <td>
          <%= link_to t('.email', :default => t("helpers.links.email")),
                      new_admin_group_email_path(group), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_group_path(group), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_group_path(group),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_group_path,
            :class => 'btn btn-primary' %>
</div>